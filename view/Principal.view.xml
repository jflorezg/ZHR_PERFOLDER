<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:form="sap.ui.layout.form" xmlns:layout="sap.ui.layout" xmlns:core="sap.ui.core"
	xmlns:unified="sap.ui.unified" controllerName="com.lh.zhr_paymentstb.controller.Principal" class="sapUiSizeCozy">
	
		<Page showHeader="false" title="{i18n>title}" showFooter="true">
			<content>
				<Panel width="auto">
					<content>
						<form:SimpleForm id="SimpleFormDisplay480_12120" editable="false" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="4"
							labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2"
							columnsL="2" columnsM="1" singleContainerFullSize="false">
							<form:content>
								<core:Title text=" "/>
								<Label text="{i18n>noempleado}"/>
								<Text text="{employeeData>/Pernr}"/>
								<Label text="{i18n>sociedad}"/>
								<Text text="{employeeData>/Bukrs} - {employeeData>/CompName}"/>
								<Label text="{i18n>ceco}"/>
								<Text text="{employeeData>/Kostl} - {employeeData>/DivNam}"/>
								<core:Title text=" "/>
								<Label text="{i18n>name}"/>
								<Text text="{employeeData>/Ename}"/>
								<Label text="{i18n>unit}"/>
								<Text text="{employeeData>/Orgeh} - {employeeData>/OrgName}"/>
								<Label text="{i18n>division}"/>
								<Text text="{employeeData>/Werks} - {employeeData>/AreaName}"/>
							</form:content>
						</form:SimpleForm>
					</content>
				</Panel>
				<form:ResponsiveGridLayout columnsM="1" columnsL="2" emptySpanL="0" emptySpanM="0" emptySpanS="0" visible="true" labelSpanS="12"
					labelSpanM="2" labelSpanL="12" breakpointM="800"/>
				<layout:Grid defaultIndent="L0 M0 S0" defaultSpan="L12 M12 S12" position="Left" width="auto" containerQuery="false" hSpacing="0"
					vSpacing="0" visible="true" breakpointM="800">
					<layout:content>
						<form:SimpleForm layout="ResponsiveGridLayout" labelSpanXL="1" labelSpanL="1"
							labelSpanM="11" labelSpanS="11" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2"
							columnsL="2" columnsM="1" columnsS="1" singleContainerFullSize="true"  editable="true" >
							<form:content>
								
								<Label text="{i18n>paymentPeriod}" labelFor="selTime" design="Bold">
									<layoutData>
										<layout:GridData span="L1 M3 S6" indentL="0"/>
									</layoutData>
								</Label>
								<Select width="300px" maxWidth="100%" id="selTime" forceSelection="true" items="{payData>/results}" change="onPayDateSelect">
									<core:Item key="{payData>Paydt}" text="{payData>Paydt}"/>
								</Select>
								<Label text="" labelFor="idGroupTypePT" design="Bold">
									<layoutData>
										<layout:GridData span="L1 M3 S6" indentL="0"/>
									</layoutData>
								</Label>
								<RadioButtonGroup id="idGroupTypePT" columns="2" selectedIndex="0" class="sapUiMediumMarginBottom" visible="{visibilidadModel>/visible}">
									<RadioButton id="RB2-1" text="{i18n>nomina}" />
									<RadioButton id="RB2-2" text="{i18n>cfdi}" />
									
								</RadioButtonGroup>
							</form:content>
						</form:SimpleForm>
					</layout:content>
					<Table id="payStup" items="{paymentInfo>/results}" includeItemInSelection="true">
						<columns>
							<Column minScreenWidth="Tablet" demandPopin="true">
								<Text text="{i18n>payDate}"/>
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true">
								<Text text="{i18n>paymentDescription}"/>
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true" visible="false">
								<Text text="{i18n>Sequence}"/>
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true" visible="{visibilidadModel>/visible}">
								<Text text="{i18n>SignDate}"/>
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true" visible="{visibilidadModel>/visible}">
								<Text text="{i18n>SignTime}"/>
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true">
								<Text text="{i18n>Sign}"/>
							</Column>
						</columns>
						<items>
							<ColumnListItem vAlign="Middle">
								<cells>
									<Text text="{paymentInfo>PayDate}"/>
									<Text text="{paymentInfo>PayDesc}"/>
									<Text text="{paymentInfo>Seqnr}" visible="false"/>
									<Text text="{paymentInfo>fdate}" visible="{visibilidadModel>/visible}"/>
									<Text text="{paymentInfo>ftime}" visible="{visibilidadModel>/visible}"/>
									<HBox>
										<Button text="Firmar" icon="sap-icon://signature" enabled="{= ${paymentInfo>fdate} === ''  ? true : false  }" visible="{visibilidadModel>/visible}"
										press="confirmSign"></Button>
										<layout:Splitter/>
										<Button text="PDF" icon="sap-icon://pdf-attachment" press="onOpenPDF"></Button>
									</HBox>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</layout:Grid>
			</content>
			<footer>
				<OverflowToolbar width="100%" height="auto" design="Auto" enabled="true" visible="true">
					<content>
						<ToolbarSpacer width=""/>
						<Button text="{i18n>btn_enviar}" type="Emphasized" iconFirst="true" width="auto" enabled="true" visible="false" iconDensityAware="false"
							press="confirmsendRequest"/>
						<!--<Button text="Reset" type="Default" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false"
							press="_onButtonPress1"/>-->
						<!--<Button text="Entitlements" type="Default" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false"
									press="_onButtonPress2"/>-->
						<Button text="{i18n>btn_vacacionesPlanificadas}" type="Default" iconFirst="true" width="auto" enabled="true" visible="false"
							iconDensityAware="false" press="_onButtonPress3"/>
					</content>
				</OverflowToolbar>
			</footer>
		</Page>

</mvc:View>